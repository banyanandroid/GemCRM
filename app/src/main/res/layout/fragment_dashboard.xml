<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/dashboard_card_view1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    card_view:cardCornerRadius="@dimen/card_album_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/dashboard_thumbnail1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/album_cover_height"
                            android:background="@drawable/ic_target3"
                            android:clickable="true"
                            android:scaleType="center" />


                        <ImageView
                            android:id="@+id/dashboard_overflow1"
                            android:layout_width="@dimen/ic_album_overflow_width"
                            android:layout_height="@dimen/ic_album_overflow_height"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/dashboard_thumbnail1"
                            android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_dots" />

                        <TextView
                            android:id="@+id/dashboard_title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/dashboard_thumbnail1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/album_title_padding"
                            android:paddingRight="@dimen/album_title_padding"
                            android:paddingTop="@dimen/album_title_padding"
                            android:text="Finance Target"
                            android:textColor="@color/album_title"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/dashboard_card_view2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    card_view:cardCornerRadius="@dimen/card_album_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/dashboard_thumbnail2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/album_cover_height"
                            android:background="@drawable/ic_target2"
                            android:clickable="true"
                            android:scaleType="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <ImageView
                            android:id="@+id/dashboard_overflow2"
                            android:layout_width="@dimen/ic_album_overflow_width"
                            android:layout_height="@dimen/ic_album_overflow_height"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/dashboard_thumbnail2"
                            android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_dots" />

                        <TextView
                            android:id="@+id/dashboard_title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/dashboard_thumbnail2"
                            android:gravity="center"
                            android:paddingLeft="@dimen/album_title_padding"
                            android:paddingRight="@dimen/album_title_padding"
                            android:paddingTop="@dimen/album_title_padding"
                            android:text="Product Target"
                            android:textColor="@color/album_title"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/dashboard_card_view3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    card_view:cardCornerRadius="@dimen/card_album_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/dashboard_thumbnail3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/album_cover_height"
                            android:background="@drawable/ic_target1"
                            android:clickable="true"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/dashboard_overflow3"
                            android:layout_width="@dimen/ic_album_overflow_width"
                            android:layout_height="@dimen/ic_album_overflow_height"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/dashboard_thumbnail3"
                            android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_dots" />

                        <TextView
                            android:id="@+id/dashboard_title3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/dashboard_thumbnail3"
                            android:gravity="center"
                            android:paddingLeft="@dimen/album_title_padding"
                            android:paddingRight="@dimen/album_title_padding"
                            android:paddingTop="@dimen/album_title_padding"
                            android:text="Target 3"
                            android:textColor="@color/album_title"
                            android:textSize="@dimen/album_title"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/dashboard_card_view4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    card_view:cardCornerRadius="@dimen/card_album_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/dashboard_thumbnail4"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/album_cover_height"
                            android:background="@drawable/ic_target"
                            android:clickable="true"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/dashboard_overflow4"
                            android:layout_width="@dimen/ic_album_overflow_width"
                            android:layout_height="@dimen/ic_album_overflow_height"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/dashboard_thumbnail4"
                            android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_dots" />

                        <TextView
                            android:id="@+id/dashboard_title4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/dashboard_thumbnail4"
                            android:gravity="center"
                            android:paddingLeft="@dimen/album_title_padding"
                            android:paddingRight="@dimen/album_title_padding"
                            android:paddingTop="@dimen/album_title_padding"
                            android:text="Target 4"
                            android:textColor="@color/album_title"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>




